/dts-v1/;
#include <st/f1/stm32f103Xb.dtsi>
#include <st/f1/stm32f103c(8-b)tx-pinctrl.dtsi>

/ {
    model = "BOARD DIRECTDRIVETECH A2 Leg F103CBT6";
    compatible = "DirectDriveTech,A2_Leg_F103CBT6";

    chosen {
		zephyr,console = &usart1;
		zephyr,shell-uart = &usart1;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
	};

	rtt0: rtt_chan0 {
		compatible = "segger,rtt-uart";
		status = "okay";
	};

    leds {
		compatible = "gpio-leds";
		board_led_a: led_red{
			gpios = <&gpiob 6 GPIO_ACTIVE_LOW>;
			label = "LED-A";
		};
		board_led_b: led_green{
			gpios = <&gpiob 7 GPIO_ACTIVE_LOW>;
			label = "LED-B";
		};
		board_led_c: led_blue{
			gpios = <&gpiob 8 GPIO_ACTIVE_LOW>;
			label = "LED-C";
		};
		soft_pwm: soft_pwm{
			gpios = <&gpioa 7 GPIO_ACTIVE_LOW>;
			label = "SOFT-PWM";
		};
	};

	pwmsdi {
		compatible = "pwm-leds";
		status = "okay";

		pwm_sdi: pwm_sdi{
			label = "PWM-AS-SDI";
			pwms = <&time3pwm2 2 1000 PWM_POLARITY_NORMAL>;
		};
	};

	pwmsck {
		compatible = "pwm-leds";
		status = "okay";

		pwm_sck: pwm_sck{
			label = "PWM-AS-SCK";
			pwms = <&time2pwm4 4 1000 PWM_POLARITY_NORMAL>;
		};
	};


    aliases {
        boardleda = &board_led_a;
        boardledb = &board_led_b;
        boardledc = &board_led_c;
		watchdog0 = &iwdg;
		pwmassck = &pwm_sck;
		pwmassdi = &pwm_sdi;
		softpwm = &soft_pwm;
    };
};

&clk_hse {
    clock-frequency = <DT_FREQ_M(8)>;
    status = "okay";
};

&pll {
    mul = <8>;
	clocks = <&clk_hse>;
	status = "okay";
};

&rcc {
    clocks = <&pll>;
    clock-frequency = <DT_FREQ_M(72)>;
    ahb-prescaler = <1>;
    apb1-prescaler = <2>;
    apb2-prescaler = <2>;
};

&usart1 {
	pinctrl-0 = <&usart1_tx_pa9 &usart1_rx_pa10>;
	pinctrl-names = "default";
	current-speed = <460800>;
	status = "okay";
};

&spi1 {
	pinctrl-0 = <&spi1_sck_master_pa5 &spi1_mosi_master_pa7>;
	cs-gpios = <&gpioa 4 GPIO_ACTIVE_LOW>;
	pinctrl-names = "default";
	status = "okay";
};

&can1 {
	pinctrl-0 = <&can_rx_pa11 &can_tx_pa12>;
	pinctrl-names = "default";
	bus-speed = <1000000>;
	sjw = <1>;
	prop-seg = <0>;
	phase-seg1 = <4>;
	phase-seg2 = <2>;
	status = "okay";
};

&timers2 {
	st,prescaler = <1>;
	status = "okay";

	time2pwm4: pwm {
		status = "okay";
		pinctrl-0 = <&tim2_ch4_pwm_pa3>;
		pinctrl-names = "default";
	};
};

&timers3 {
	st,prescaler = <1000>;
	status = "okay";

	time3pwm2: pwm {
		status = "okay";
		pinctrl-0 = <&tim3_ch2_pwm_pa7>;
		pinctrl-names = "default";
	};
};

&timers4 {
	st,prescaler = <10000>;
	status = "okay";

	time4pwm1: pwm {
		status = "okay";
		pinctrl-0 = <&tim4_ch1_pwm_pb6>;
		pinctrl-names = "default";
	};
	time4pwm2: pwm {
		status = "okay";
		pinctrl-0 = <&tim4_ch2_pwm_pb7>;
		pinctrl-names = "default";
	};
};

&flash0 {
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		/* 32KB for bootloader */
		boot_partition: partition@0 {
			label = "mcuboot";
			reg = <0x00000000 DT_SIZE_K(32)>;
			read-only;
		};

		/* 32KB for Store User Data */
		user_partition: partition@8000 {
			label = "userstorage";
			reg = <0x00008000 DT_SIZE_K(32)>;
		};

		/* Set 2KB of storage at the end of 128KB flash */
		storage_partition: partition@1f800 {
			label = "storage";
			reg = <0x0001f800 DT_SIZE_K(2)>;
		};
	};
};
