/dts-v1/;
#include <st/f1/stm32f103Xb.dtsi>
#include <st/f1/stm32f103c(8-b)tx-pinctrl.dtsi>

/ {
    model = "BOARD DIRECTDRIVETECH A2 Leg F103CBT6";
    compatible = "DirectDriveTech,A2_Leg_F103CBT6";

    chosen {
		zephyr,console = &usart1;
		zephyr,shell-uart = &usart1;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
	};

    leds {
		compatible = "gpio-leds";
		board_led_a: led_red{
			gpios = <&gpiob 5 GPIO_ACTIVE_LOW>;
			label = "LED-RED";
		};
		board_led_b: led_green{
			gpios = <&gpiob 6 GPIO_ACTIVE_LOW>;
			label = "LED-GREEN";
		};
		board_led_c: led_blue{
			gpios = <&gpiob 7 GPIO_ACTIVE_LOW>;
			label = "LED-BLUE";
		};
	};

	ledspwm {
		compatible = "pwm-leds";
		status = "okay";

		time3_pwm2_pb5: time3_ch2 {
			pwms = <&time3pwm 2 PWM_MSEC(20) PWM_POLARITY_NORMAL>;
		};
		time4_pwm1_pb6: time4_ch1 {
			pwms = <&time4pwm1 1 PWM_MSEC(20) PWM_POLARITY_NORMAL>;
		};
		time4_pwm2_pb7: time4_ch2 {
			pwms = <&time4pwm2 2 PWM_MSEC(20) PWM_POLARITY_NORMAL>;
		};
	};

    aliases {
        boardleda = &board_led_a;
        boardledb = &board_led_b;
        boardledc = &board_led_c;
		watchdog0 = &iwdg;
		pwmpb5 = &time3_pwm2_pb5;
		pwmpb6 = &time4_pwm1_pb6;
		pwmpb7 = &time4_pwm2_pb7;
    };
};

&clk_hse {
    clock-frequency = <DT_FREQ_M(8)>;
    status = "okay";
};

&pll {
    mul = <9>;
};

&rcc {
    clocks = <&pll>;
    clock-frequency = <DT_FREQ_M(72)>;
    ahb-prescaler = <1>;
    apb1-prescaler = <2>;
    apb2-prescaler = <1>;
};

&usart1 {
	pinctrl-0 = <&usart1_tx_pa9 &usart1_rx_pa10>;
	pinctrl-names = "default";
	current-speed = <460800>;
	status = "okay";
};

&spi1 {
	pinctrl-0 = <&spi1_sck_master_pa5 &spi1_mosi_master_pa7>;
	cs-gpios = <&gpioa 4 GPIO_ACTIVE_LOW>;
	pinctrl-names = "default";
	status = "okay";
};

&can1 {
	pinctrl-0 = <&analog_pa11 &analog_pa12>;
	pinctrl-names = "default";
	bus-speed = <1000000>;
	sjw = <1>;
	prop-seg = <0>;
	phase-seg1 = <4>;
	phase-seg2 = <2>;
	status = "okay";
};

&timers3 {
	st,prescaler = <10000>;
	status = "okay";

	time3pwm: pwm {
		status = "okay";
		pinctrl-0 = <&tim3_ch2_remap1_pwm_out_pb5>;
		pinctrl-names = "default";
	};
};



&timers4 {
	st,prescaler = <10000>;
	status = "okay";

	time4pwm1: pwm {
		status = "okay";
		pinctrl-0 = <&tim4_ch1_pwm_out_pb6>;
		pinctrl-names = "default";
	};
	time4pwm2: pwm {
		status = "okay";
		pinctrl-0 = <&tim4_ch2_pwm_out_pb7>;
		pinctrl-names = "default";
	};
};

&flash0 {
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		/* 32KB for bootloader */
		boot_partition: partition@0 {
			label = "mcuboot";
			reg = <0x00000000 DT_SIZE_K(32)>;
			read-only;
		};

		/* 32KB for Store User Data */
		user_partition: partition@8000 {
			label = "userstorage";
			reg = <0x00008000 DT_SIZE_K(32)>;
		};

		/* Set 2KB of storage at the end of 128KB flash */
		storage_partition: partition@1f800 {
			label = "storage";
			reg = <0x0001f800 DT_SIZE_K(2)>;
		};
	};
};
